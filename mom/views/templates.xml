<odoo>
    <data>

        <template id="report_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                     <t t-call="web.external_layout">
                        <div class="page">
                            <h3>Minute of Meeting: <t t-esc="o.name"/></h3>
                            <table class="table">
                              <tr><td>Project</td><td> : </td><td><t t-esc="o.project_id.name"/></td></tr>
                              <tr><td>Date</td><td> : </td><td><t t-esc="o.date"/></td></tr>
                              <tr><td>Participants</td><td> : </td><td>
                                          <ul><t t-foreach="o.participant_ids" t-as="p">
                                              <li><t t-esc="p.name"/></li>
                                          </t></ul></td></tr>
                            </table>
                            <t t-raw="o.body"/>
                        </div>
                      </t>
                </t>
            </t>
         </template>

        <report
            id="mom_document"
            model="mom.document"
            string="Print MoM"
            report_type="qweb-pdf"
            name="mom.report_document"
            file="mom.report_document"
            print_report_name="'MoM - %s' % (object.name)" 
        />
    </data>
</odoo>
